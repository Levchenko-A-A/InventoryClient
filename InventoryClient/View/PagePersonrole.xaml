<Page x:Class="InventoryClient.View.PagePersonrole"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:InventoryClient.View"
      xmlns:converter="clr-namespace:InventoryClient.Infrastructure.Converters"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PagePersonrole">
    <Page.Resources>
        <converter:UseridToPersonnameConverter x:Key="UserIdToName"/>
        <converter:RoleidToRolenameConverter x:Key="RoleidToName"/>
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="9*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Button x:Name="ButtonAddPersonRolle" 
                    Visibility="{Binding AddPersonRoleButVis}"
                    IsEnabled="{Binding AddPersonRoleButIsE}"
                    Style="{StaticResource MaterialDesignFloatingActionButton}" ToolTip="Добавить" 
                    Width="50" Height="50" Grid.Row="0" Command="{Binding AddCommand}">
                <materialDesign:PackIcon Kind="Add" Height="30" Width="30" />
            </Button>
            <Button Style="{StaticResource MaterialDesignFloatingActionButton}" ToolTip="Редактировать Роль"
                    Visibility="{Binding UpdatePersonRoleButVis}"
                    IsEnabled="{Binding UpdatePersonRoleButIsE}"
                    Width="50" Height="50" Grid.Row="1" Command="{Binding UpdateCommand}" 
                    CommandParameter="{Binding ElementName=PersonRoleList,Path=SelectedItem}">
                <materialDesign:PackIcon Kind="Update" Height="30" Width="30" />
            </Button>
            <Button Style="{StaticResource MaterialDesignFloatingActionButton}" ToolTip="Удалить" 
                    Visibility="{Binding DelPersonRoleButVis}"
                    IsEnabled="{Binding DelPersonRoleButIsE}"
                    Width="50" Height="50" Grid.Row="2" Command="{Binding DeleteCommand}" 
                    CommandParameter="{Binding ElementName=PersonRoleList,Path=SelectedItem}">
                <materialDesign:PackIcon Kind="Delete" Height="30" Width="30" />
            </Button>
        </Grid>
        <ListBox Grid.Column="0" Name="PersonRoleList" ItemsSource="{Binding PersonRoles}"  SelectedItem="{Binding SelectedPersonRole}" >
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <materialDesign:Card
                        Background="{DynamicResource PrimaryHueDarkBrush}"
                        Foreground="{DynamicResource PrimaryHueDarkForegroundBrush}"
                        Padding="8"
                        Width="900"
                        Margin="10 10"
                        UniformCornerRadius="6">
                        <StackPanel>
                            <TextBlock Text="{Binding Personroleid}" FontSize="20" />
                            <TextBlock Text="{Binding Path=Personid, Converter={StaticResource UserIdToName}}" FontSize="25" />
                            <TextBlock Text="{Binding Path=Roleid, Converter={StaticResource RoleidToName}}" FontSize="20" />
                        </StackPanel>
                    </materialDesign:Card>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Page>
