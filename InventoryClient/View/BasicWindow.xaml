<Window x:Class="InventoryClient.View.BasicWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InventoryClient.View"
        mc:Ignorable="d"
        Title="Инвентаризация оборудования" Height="650" Width="900">
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="8*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Button Style="{StaticResource MaterialDesignRaisedLightButton}"
                        ToolTip="Список пользователей"
                        Grid.Row="0" Content="Пользователи" Margin="20 30" 
                        Command="{Binding PersonCommand}"/>
                <Button Style="{StaticResource MaterialDesignRaisedLightButton}"
                        ToolTip="Список категорий"
                        Grid.Row="1" Content="Категории" Margin="20 30" 
                        Command="{Binding CategoryCommand}"/>
                <Button Style="{StaticResource MaterialDesignRaisedLightButton}"
                        ToolTip="Список устройств"
                        Grid.Row="2" Content="Устройства" Margin="20 30" 
                        Command="{Binding DeviceCommand}"/>
                <Button Style="{StaticResource MaterialDesignRaisedLightButton}" 
                        ToolTip="Список производителей"
                        Grid.Column="0" Grid.Row="3" Content="Производитель" Margin="20 30" 
                        Command="{Binding ManufacturerCommand}"/>
                <Button Style="{StaticResource MaterialDesignRaisedLightButton}" 
                        ToolTip="Список Расположений"
                        Grid.Column="0" Grid.Row="4" Content="Расположение" Margin="20 30" 
                        Command="{Binding LocationCommand}"/>
                <Button Style="{StaticResource MaterialDesignRaisedLightButton}" 
                        ToolTip="Выход"
                        Grid.Column="0" Grid.Row="5" Content="Выход" Margin="20 30" 
                        Command="{Binding ExitCommand}"/>
            </Grid>
            <Frame Grid.Column="1" x:Name="MainFrame"/>
        </Grid>
    </Grid>
</Window>
