<Window x:Class="InventoryClient.View.BasicWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InventoryClient.View"
        mc:Ignorable="d"
        Title="BasicWindow" Height="650" Width="900">
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="8*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Button Grid.Column="0" Grid.Row="0" Content="Пользователи" Margin="20 30" Style="{StaticResource MaterialDesignRaisedLightButton}" Click="Button_Click"/>
                <Button Grid.Column="0" Grid.Row="1" Content="Категории" Margin="20 30" Style="{StaticResource MaterialDesignRaisedLightButton}" Click="Button_Click_1"/>
                <Button Grid.Column="0" Grid.Row="2" Content="Устройства" Margin="20 30" Style="{StaticResource MaterialDesignRaisedLightButton}" Click="Button_Click_2"/>
                <Button Grid.Column="0" Grid.Row="3" Content="Производитель" Margin="20 30" Style="{StaticResource MaterialDesignRaisedLightButton}" Click="Button_Click_3"/>
                <Button Grid.Column="0" Grid.Row="4" Content="Расположение" Margin="20 30" Style="{StaticResource MaterialDesignRaisedLightButton}" Click="Button_Click_4"/>
                <Button Grid.Column="0" Grid.Row="5" Content="Выход" Margin="20 30" Style="{StaticResource MaterialDesignRaisedLightButton}" Click="Button_Click_5"/>
            </Grid>
            <Frame Grid.Column="1" x:Name="MainFrame"/>
        </Grid>
    </Grid>
</Window>
