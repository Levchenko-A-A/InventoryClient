<Page x:Class="InventoryClient.View.PageLocation"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:InventoryClient.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageLocation">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="9*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Button Style="{StaticResource MaterialDesignFloatingActionButton}" ToolTip="Добавить" 
                    Width="50" Height="50" Grid.Row="0" Command="{Binding AddLocCommand}">
                <materialDesign:PackIcon Kind="Add" Height="30" Width="30" />
            </Button>
            <Button Style="{StaticResource MaterialDesignFloatingActionButton}" ToolTip="Удалить" 
                    Width="50" Height="50" Grid.Row="1" Command="{Binding UpdateLocCommand}" 
                    CommandParameter="{Binding ElementName=LocationList,Path=SelectedItem}">
                <materialDesign:PackIcon Kind="Update" Height="30" Width="30" />
            </Button>
            <Button Style="{StaticResource MaterialDesignFloatingActionButton}" ToolTip="Удалить" 
                    Width="50" Height="50" Grid.Row="2" Command="{Binding DeleteLocCommand}" 
                    CommandParameter="{Binding ElementName=LocationList,Path=SelectedItem}">
                <materialDesign:PackIcon Kind="Delete" Height="30" Width="30" />
            </Button>
        </Grid>
        <ListBox Grid.Column="0" Name="LocationList" ItemsSource="{Binding Locations}"  SelectedItem="{Binding SelectedLocations}" >
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <materialDesign:Card
                        Background="{DynamicResource PrimaryHueDarkBrush}"
                        Foreground="{DynamicResource PrimaryHueDarkForegroundBrush}"
                        Padding="8"
                        Width="900"
                        Margin="10 10"
                        UniformCornerRadius="6">
                        <StackPanel>
                            <TextBlock Text="{Binding Locationid}" FontSize="25" />
                            <TextBlock Text="{Binding Name}" FontSize="25" />
                            <TextBlock Text="{Binding Description}" FontSize="20" />
                            <TextBlock Text="{Binding Createdat}" FontSize="20" />
                        </StackPanel>
                    </materialDesign:Card>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Page>
