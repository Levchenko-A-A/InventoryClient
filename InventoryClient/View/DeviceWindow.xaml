<Window x:Class="InventoryClient.View.DeviceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:InventoryClient.View"
        mc:Ignorable="d"
        Title="DeviceWindow" Height="650" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox Grid.Row="0"
                 materialDesign:HintAssist.Hint="Наименование" Margin="50 20">
            <TextBox.Text>
                <Binding Path="Name" UpdateSourceTrigger="PropertyChanged">
                </Binding>
            </TextBox.Text>
        </TextBox>
        <TextBox Grid.Row="1" Margin="50 20">
        </TextBox>
        <ComboBox materialDesign:HintAssist.Hint="Категория" x:Name="ComboBoxCategory"
                  Grid.Row="1" Margin="50 20" DisplayMemberPath="Name"
                  SelectedValuePath="Categoryid" SelectedValue="{Binding Categoryid}"/>
        <TextBox Grid.Row="2" Margin="50 20">
        </TextBox>
        <ComboBox materialDesign:HintAssist.Hint="Производитель" x:Name="ComboBoxManufacturer"
                  Grid.Row="2" Margin="50 20" DisplayMemberPath="Name"
                  SelectedValuePath="Manufactureid" SelectedValue="{Binding Manufactureid}"/>
        <TextBox Grid.Row="3" Margin="50 20">
        </TextBox>
        <ComboBox materialDesign:HintAssist.Hint="Локация" x:Name="ComboBoxLocation"
                  Grid.Row="3" Margin="50 20" DisplayMemberPath="Name"
                  SelectedValuePath="Locationid" SelectedValue="{Binding Locationid}"/>
        <TextBox Grid.Row="4"
         materialDesign:HintAssist.Hint="Описание" Margin="50 20">
            <TextBox.Text>
                <Binding Path="Description" UpdateSourceTrigger="PropertyChanged">
                </Binding>
            </TextBox.Text>
        </TextBox>
        <Grid Grid.Row="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Content="OK" Grid.Column="0" Margin="20 10" Click="Button_Click_1"/>
            <Button Content="Cancel" Grid.Column="1" Margin="20 10" Click="Button_Click_2"/>
        </Grid>
    </Grid>
</Window>
